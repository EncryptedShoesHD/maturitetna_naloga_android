<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/list_image_view"
        android:layout_width="57dp"
        android:layout_height="54dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_library_books_24" />

    <TextView
        android:id="@+id/reminder_title"
        android:layout_width="250dp"
        android:layout_height="54dp"
        android:fontFamily="@font/open_sans"
        android:padding="0dp"
        android:paddingStart="15dp"
        android:text="Reminder1"
        android:textColor="@color/modra"
        android:textSize="19sp"
        app:layout_constraintStart_toEndOf="@+id/list_image_view"
        app:layout_constraintTop_toTopOf="@+id/list_image_view" />

    <TextView
        android:id="@+id/reminder_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:fontFamily="@font/open_sans"
        android:text="Datum"
        app:layout_constraintBottom_toBottomOf="@+id/list_image_view"
        app:layout_constraintStart_toEndOf="@+id/list_image_view" />

    <TextView
        android:id="@+id/reminder_time"
        android:layout_width="58dp"
        android:layout_height="18dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/open_sans"
        android:text="ura"
        app:layout_constraintBottom_toBottomOf="@+id/reminder_title"
        app:layout_constraintEnd_toEndOf="@+id/reminder_title" />

</androidx.constraintlayout.widget.ConstraintLayout>